  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mindsdb-js-sdk": "^2.3.2",
    "mysql2": "^3.6.5",
