{
  "name": "customer-support-backend",
  "version": "1.0.0",
  "description": "Backend API for Customer Support Chatbot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
