# Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Development Mode (set to true to use mock data instead of MindsDB)
MOCK_MODE=true

# MindsDB Configuration
MINDSDB_HOST=localhost
MINDSDB_PORT=47334
MINDSDB_USER=mindsdb
MINDSDB_PASSWORD=
MINDSDB_DATABASE=mindsdb

# MindsDB Cloud Configuration (optional)
MINDSDB_USE_CLOUD=false
MINDSDB_CLOUD_EMAIL=your_email@example.com
MINDSDB_CLOUD_PASSWORD=your_password
MINDSDB_HTTP_URL=http://localhost:47334

# OpenAI Configuration (for AI models)
OPENAI_API_KEY=your_openai_api_key_here

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
